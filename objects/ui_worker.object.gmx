    if(mouse_check_button_released(mb_left)){if(!instance_exists(ui_dialog)){
        //close
        if(mouse_y&gt;=1080){state=n1;func_sound_click();}
        //tool change
        else if(mouse_x&gt;=520 &amp;&amp; mouse_y&gt;=920 &amp;&amp; mouse_x&lt;=680 &amp;&amp; mouse_y&lt;=1080){func_sound_click();
            parent.select_worker=worker;
            parent.menu=n3;
            state=n1;
        }
        //select skin
        else if(mouse_x&gt;=40 &amp;&amp; mouse_y &gt;= 920 &amp;&amp; mouse_x &lt;= 520 &amp;&amp; mouse_y &lt;= 1080){
            var selectedSkin = floor( (mouse_x-40)/80 ) + (6 * floor( (mouse_y-920)/80 ));
            if(selectedSkin &lt; global.worker_skins [ds_map_find_value(global.work[|worker],ID)]){
                //save new skin
                ds_map_replace(global.work[|worker], SKN, selectedSkin);
                //refetch
                event_perform(ev_other, ev_user0);
            }
        }
    }}
}
else{
    if(stime&gt;0){stime--;}//anim_out
    else{
        game_save_data();
        instance_destroy();
    }
}
var dy=func_dy(stime,45);
//draw_dim
draw_dim(stime,45);
//draw_worker
if(worker_portrait &gt; -1) {draw_sprite_ext(worker_portrait,0,0,dy,0.666667,0.666667,0,c_white,1);}
//draw_bottom
draw_sprite_ext(spr_worker,1,0,dy,1,1,0,c_white,1);
//draw tool
var workerTool = ds_map_find_value(global.work[|worker],TOOL); if(workerTool&gt;-1){
    draw_sprite_ext(spr_tool,ds_map_find_value(global.tool[|workerTool],ID),600,dy+1000,1.25,1.25,0,c_white,1);
}
//draw_center
draw_sprite_ext(spr_worker,0,0,dy,1,1,0,c_white,1);
var workername = ds_map_find_value(global.work[|worker],CHARA_NAME);
if(workername=""){workername=global.txt_noname;} 
var text = global.txt_name+workername+RETURN+global.txt_lvl+string(ds_map_find_value(global.work[|worker],LV));
//draw_detail
draw_shadowed_text(80,dy+640,text,global.font,fa_left,fa_top,c_black);
//draw chosen skn
var sx=-1;sy=-1; switch(ds_map_find_value(global.work[|worker],SKN)){
    case 0: sx=80; sy=dy+960; break;
    case 1: sx=160;sy=dy+960; break;
    case 2: sx=240;sy=dy+960; break;
